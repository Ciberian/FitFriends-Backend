{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fit-friends/config": ["libs/config/src/index.ts"],
      "@fit-friends/core": ["libs/core/src/index.ts"],
      "@fit-friends/shared-types": ["libs/shared-types/src/index.ts"],
      "@fit-friends/lib/user-role": ["libs/shared-types/src/lib/enums/user-role.enum.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
